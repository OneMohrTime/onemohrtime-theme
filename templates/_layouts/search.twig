{# -- Base Page Layout -- #}
{# ----------------------------------------------------------------- #}
{% extends '_base/body.twig' %}

{# -- Page Variables -- #}
{# ----------------------------------------------------------------- #}

{# -- Page Template -- #}
{# ----------------------------------------------------------------- #}
{% block content %}
    <div class="content-wrapper">
        {% for post in posts %}
            {% include ['_components/tease-' ~ post.post_type ~ '.twig', '_components/tease.twig'] %}
        {% endfor %}

        {% include '_components/pagination.twig' with { pagination: posts.pagination({show_all: false, mid_size: 3, end_size: 2}) } %}
    </div>
{% endblock %}
