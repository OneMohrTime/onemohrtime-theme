{% extends 'layouts/base.twig' %}
{% set displaySidebar = true %}

{% block content %}

<article class="post-{{ post.id }} -{{ post.type }}">

	<header class="page__header">
		{% if post.subtitle %}
			<p class="_meta">{{ post.subtitle }}</p>
		{% elseif post.post_excerpt %}
			<p class="_meta">{{ post.post_excerpt }}</p>
		{% endif %}
		{% include 'components/title.twig' %}
		{% include 'components/personality-types.twig' %}
	</header>

	<section class="page__content -getFaded _wysiwyg">
		{{ post.content }}
	</section>

	<ul class="page__rankings -getFaded">
		{% for list in power_rankings %}
			<li class="c-powerRanking">
				<h2 class="c-powerRanking__headline">{{ list.title }}</h2>
				<ul class="c-powerRanking__list">
					<pre>
						{{ dump(list.power_ranking) }}
					</pre>
					{% for item in list %}
						<li class="c-powerRanking__list-item">{{ item }}</li>
					{% endfor %}
				</ul>
			</li>
		{% endfor %}
	</ul>

</article>

{% endblock %}
