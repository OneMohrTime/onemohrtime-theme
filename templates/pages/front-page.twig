{% extends 'layouts/base.twig' %}
{% set displaySidebar = true %}

{% block content %}
	<section id="home_banner" class="banner -typographic -yellow">

		<ul id="home_banner_list" class="banner__list -getFaded">
			{% for link in links %}
				{% set link = link.link %}
				<li class="banner__listItem">
					<a href="{{ link.url }}" class="banner__link">{{ link.title }}</a>
					{% if not loop.last %}//&nbsp;{% endif %}
				</li>
			{% endfor %}
		</ul>

		<div id="home_intro" class="banner__intro">
			<div class="_line"></div>
			<h2 id="home_title" class="_title -wysiwyg">
				<span class="-row">
					<span class="-word">
						<span class="-block"></span>
						<span class="-text">Developer</span>
					</span>
					<span class="-word">
						<span class="-block"></span>
						<span class="-text">for</span>
					</span>
					<span class="-word">
						<span class="-block"></span>
						<span class="-text"><a href="//mightyinthemidwest.com/" target="_blank" rel="noopener" title="Mighty In The Midwest" class="intro__link">Mighty</a></span>
					</span>
					<span class="-word">
						<span class="-block"></span>
						<span class="-text">by</span>
					</span>
					<span class="-word">
						<span class="-block"></span>
						<span class="-text">day,</span>
					</span>
				</span>
				<span class="-row">
					<span class="-word">
						<span class="-block"></span>
						<span class="-text"><a href="{{ site.link }}/travel/" class="intro__link">Traveling</a></span>
					</span>
					<span class="-word">
						<span class="-block"></span>
						<span class="-text">designer</span>
					</span>
					<span class="-word">
						<span class="-block"></span>
						<span class="-text">by</span>
					</span>
					<span class="-word">
						<span class="-block"></span>
						<span class="-text">night.</span>
					</span>
				</span>
			</h2>
			<p class="_tagline -getFaded">
				<span><a href="{{ site.link }}/about" class="banner__link">Derek Mohr</a> // </span>
				<span>Grand Rapids, MI // </span>
				<span>
					<a href="{{ site.link }}/about#work-history" class="banner__link" title="Full Stack Developer">Full Stack Developer</a> +
					<a href="{{ site.link }}/design" class="banner__link" title="Graphic Designer">Graphic Designer</a>
				</span>
			</p>
		</div>
	</section>

	<section id="home_dribbble" class="homepage__dribbble">
		<h2 class="dribbble__title">Recent Designs on Dribbble</h2>
		<div id="dribbbles" class="dribbbles"></div>
	</section>

	{% if about %}
		<figure id="home_about" class="homepage__about">

			<img src="{{ Image(about.image).src }}"
				alt="{{ about.image.alt }}"
				class="homepage__about--image"
				srcset="{{ Image(about.image).src('medium') }} 1000w,
						{{ Image(about.image).src('large') }} 1500w" />

			<figcaption class="homepage__about--content _wysiwyg -getFaded">
				{{ about.text }}
			</figcaption>

		</figure>
	{% endif %}

	{# Add Section Repeater #}
	{% if post.sections|length %}
		<div class="homepage__builder">
			{% include 'partials/builder.twig' %}
		</div>
	{% endif %}

{% endblock %}

{% block sidebar %}
	{% include 'blocks/sidebar.twig' %}
{% endblock %}
