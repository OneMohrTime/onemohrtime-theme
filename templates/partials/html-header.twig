<!doctype html>
<html class="no-js" {{ site.language_attributes }}>

<head>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta charset="{{ site.charset }}" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge">

	<link rel="author" href="{{ site.theme.link }}/humans.txt" />
	<link rel="pingback" href="{{ site.pingback_url }}" />
	<link rel="profile" href="http://gmpg.org/xfn/11">

	{# Ask for JS immediately to determine if it exists.
	   This is helpful for hiding with CSS on page load, to avoid a "blink"
	   of what might need to be "hidden" elements #}
	<script>
		document.querySelector('html').classList.remove('no-js');
		document.querySelector('html').classList.add('js-friendly');
	</script>

	{{ function('wp_head') }}
